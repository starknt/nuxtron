{
  "$schema": "http://json.schemastore.org/electron-builder",
  "productName": "playground",
  "appId": "com.electron.starknt",
  "asar": true,
  "asarUnpack": "**\\*.{dll, node}",
  "files": [
    "main.prod.mjs",
    "nuxtron",
    "public",
    "node_modules",
    "!node_modules/.modules.yaml",
    "!node_modules/**/.pnpm",
    "!node_modules/**/.bin",
    "!node_modules/**/*.d.ts",
    "!node_modules/**/*.js.map",
    "!node_modules/**/*.cjs.map",
    "!node_modules/**/*.mjs.map",
    "!node_modules/**/*.ts.map",
    "!node_modules/**/{*.vcxproj,*.vcxproj.filters}",
    "!node_modules/**/build/Release/{*.lib,*.exp,*.ilk,*.pdb,*.iobj,*.ipdb}",
    "!node_modules/**/build/Release/obj",
    "package.json"
  ],
  "copyright": "Copyright Â© 2024 ${author}",
  "dmg": {
    "contents": [
      {
        "x": 150,
        "y": 200,
        "type": "file"
      },
      {
        "x": 450,
        "y": 200,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "mac": {
    "icon": "buildResources/icons/mac/icon.icns",
    "artifactName": "${productName}-mac-${arch}-${version}.${ext}",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ],
    "type": "distribution",
    "category": "public.app-category.productivity",
    "gatekeeperAssess": false,
    "electronLanguages": [
      "en",
      "fr",
      "zh_CN",
      "de",
      "ja"
    ],
    "hardenedRuntime": true,
    "extendInfo": {
      "ITSAppUsesNonExemptEncryption": false,
      "CFBundleLocalizations": [],
      "CFBundleDevelopmentRegion": "en"
    }
  },
  "directories": {
    "app": "desktop",
    "output": "release/build"
  }
}
